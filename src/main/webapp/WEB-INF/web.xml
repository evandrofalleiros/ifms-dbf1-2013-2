<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>br.edu.ifms.dbf.mavenproject.HelloWorld</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Mensagem</servlet-name>
        <servlet-class>br.edu.ifms.dbf.mavenproject.Mensagem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormularioProc</servlet-name>
        <servlet-class>br.edu.ifms.dbf.mavenproject.FormularioProc</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Formulario</servlet-name>
        <servlet-class>br.edu.ifms.dbf.mavenproject.Formulario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Mensagem</servlet-name>
        <url-pattern>/mensagem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormularioProc</servlet-name>
        <url-pattern>/cadastrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Formulario</servlet-name>
        <url-pattern>/cadastro</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
